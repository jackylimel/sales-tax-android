<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


  <androidx.cardview.widget.CardView
      android:id="@+id/audit_card_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/card_view_audit_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <View
          android:id="@+id/separator"
          style="@style/AppTheme.SeparatorLine"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"/>

      <TextView
          android:id="@+id/card_view_audit_score"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/card_view_audit_total_score"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/card_view_audit_owner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/card_view_audit_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/card_view_audit_completed_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>